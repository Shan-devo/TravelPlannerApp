<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- ================= MAIN CONTENT ================= -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Toolbar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/bg_toolbar"
            android:paddingTop="12dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            app:title=""
            app:elevation="0dp"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Map -->
            <org.osmdroid.views.MapView
                android:id="@+id/map"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:focusable="false"
                android:focusableInTouchMode="false" />

            <!-- ================= TOP PANEL ================= -->
            <LinearLayout
                android:id="@+id/topPanel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:padding="10dp"
                android:background="@drawable/bg_card"
                android:elevation="10dp">

                <!-- CURRENT LOCATION -->
                <AutoCompleteTextView
                    android:id="@+id/etCurrentLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Current location"
                    android:enabled="false"
                    android:focusable="false"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="6dp"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/white"
                    android:background="@drawable/bg_input"/>

                <!-- DIVIDER + REVERSE -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginVertical="4dp">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:background="#DDDDDD"/>

                    <ImageButton
                        android:id="@+id/btnReverse"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginStart="8dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_swap"
                        android:tint="@android:color/white"/>
                </LinearLayout>

                <!-- DESTINATION -->
                <AutoCompleteTextView
                    android:id="@+id/etDestination"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Search destination"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="6dp"
                    android:textSize="15sp"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/white"
                    android:imeOptions="actionSearch"
                    android:singleLine="true"
                    android:background="@drawable/bg_input"/>


                <!-- WEATHER -->
                <LinearLayout
                    android:id="@+id/weatherLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="6dp"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/imgWeather"
                        android:layout_width="16dp"
                        android:layout_height="16dp"/>

                    <TextView
                        android:id="@+id/txtWeather"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:textSize="13sp"
                        android:textColor="@android:color/white"/>
                </LinearLayout>

                <!-- ROUTE BUTTON -->
                <Button
                    android:id="@+id/btnRoute"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Route"
                    style="@style/MapActionBtn"/>
            </LinearLayout>

            <!-- ================= ROUTE INFO + ACTIONS ================= -->
            <LinearLayout
                android:id="@+id/bottomRouteInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_margin="12dp"
                android:orientation="vertical"
                android:padding="16dp"
                android:visibility="gone"
                android:background="@drawable/bg_card">

                <!-- ===== ETA INFO ===== -->

                <!-- CAR -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingVertical="10dp">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:src="@drawable/ic_car"
                            android:tint="@android:color/white"/>

                        <TextView
                            android:id="@+id/txtCar"
                            android:layout_marginStart="14dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textColor="@android:color/white"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- WALK -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingVertical="10dp">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:src="@drawable/ic_walk"
                            android:tint="@android:color/white"/>

                        <TextView
                            android:id="@+id/txtWalk"
                            android:layout_marginStart="14dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textColor="@android:color/white"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- BIKE -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingVertical="10dp">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:src="@drawable/ic_bike"
                            android:tint="@android:color/white"/>

                        <TextView
                            android:id="@+id/txtBike"
                            android:layout_marginStart="14dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textColor="@android:color/white"/>
                    </LinearLayout>
                </LinearLayout>


                <!-- DIVIDER -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="8dp"
                    android:background="#DDDDDD"/>

                <!-- ===== SAVE & CLEAR ===== -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:paddingHorizontal="12dp">

                    <Button
                        android:id="@+id/btnSave"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Save â­"
                        android:visibility="gone"
                        style="@style/MapActionBtn"
                        android:layout_marginEnd="8dp"/>

                    <Button
                        android:id="@+id/btnClearRoute"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Clear"
                        android:visibility="gone"
                        style="@style/MapActionBtn"
                        android:layout_marginStart="8dp"/>
                </LinearLayout>


            </LinearLayout>

        </FrameLayout>
    </LinearLayout>

    <!-- ================= DRAWER ================= -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#CCFFFFFF"
        app:itemIconTint="@color/black"
        app:itemTextColor="@color/black"
        app:menu="@menu/drawer_menu"
        app:headerLayout="@layout/nav_header"/>

</androidx.drawerlayout.widget.DrawerLayout>
