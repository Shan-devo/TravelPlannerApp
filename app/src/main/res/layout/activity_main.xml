<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Map -->
    <org.osmdroid.views.MapView
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="false"
        android:focusableInTouchMode="false" />


    <!-- FLOATING TOP CARD -->
    <LinearLayout
        android:id="@+id/topPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:padding="12dp"
        android:background="@drawable/bg_card"
        android:elevation="12dp">


    <!-- CURRENT LOCATION (SUBTLE) -->
        <TextView
            android:id="@+id/txtCurrentLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ“ Current location"
            android:textSize="12sp"
            android:textColor="#666666"
            android:maxLines="1"
            android:ellipsize="end" />

        <!-- DESTINATION (PRIMARY) -->
        <TextView
            android:id="@+id/txtDestination"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Where to?"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginTop="6dp"
            android:maxLines="2"
            android:ellipsize="end" />

        <!-- Weather (ADD HERE) -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <ImageView
                android:id="@+id/imgWeather"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:contentDescription="Weather icon"/>

            <TextView
                android:id="@+id/txtWeather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="Weather"
                android:textSize="13sp"
                android:textColor="#444444"/>
        </LinearLayout>


        <!-- SEARCH -->
        <AutoCompleteTextView
            android:id="@+id/searchLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:padding="10dp"
            android:hint="Search destination"
            android:background="@drawable/bg_input"

            android:singleLine="true"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:focusable="true"
            android:focusableInTouchMode="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/btnRoute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Show Route"
                android:background="@drawable/button_bg_card"
                android:backgroundTint="@null"
                android:stateListAnimator="@null"
                android:paddingHorizontal="24dp"
                android:textColor="@android:color/white"/>

            <!-- Spacer -->
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/btnClearRoute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clear"
                android:background="@drawable/button_bg_card"
                android:backgroundTint="@null"
                android:stateListAnimator="@null"
                android:paddingHorizontal="24dp"
                android:textColor="@android:color/white"/>

        </LinearLayout>



    </LinearLayout>

    <!-- BOTTOM ROUTE INFO BAR -->
    <LinearLayout
        android:id="@+id/bottomRouteInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="12dp"
        android:orientation="vertical"
        android:padding="16dp"
        android:visibility="gone"
        android:background="@drawable/bg_card">

        <!-- CAR -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingVertical="10dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/ic_car"/>

                <TextView
                    android:id="@+id/txtCar"
                    android:layout_marginStart="14dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"/>
            </LinearLayout>
        </LinearLayout>

        <!-- WALK -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingVertical="10dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/ic_walk"/>

                <TextView
                    android:id="@+id/txtWalk"
                    android:layout_marginStart="14dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"/>
            </LinearLayout>
        </LinearLayout>

        <!-- BIKE -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingVertical="10dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/ic_bike"/>

                <TextView
                    android:id="@+id/txtBike"
                    android:layout_marginStart="14dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</FrameLayout>
